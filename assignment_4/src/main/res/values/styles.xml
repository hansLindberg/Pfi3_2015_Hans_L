<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:imageButtonStyle">?android:borderlessButtonStyle</item>

        <item name="android:actionBarStyle">@style/MyActionBarLogo</item>
        <item name="actionBarStyle">@style/MyActionBarLogo</item>
    </style>

    <style name="MyActionBarLogo" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#ff505050</item>
        <item name="logo">@drawable/neptune</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
    </style>

</resources>
